# California Ballot Measures Configuration
# Copy this to .env and update with your settings

# Database
DATABASE_URL=sqlite:///data/ballot_measures.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
# CORS origins - update for production
CORS_ORIGINS=["http://localhost:8000", "http://localhost:8080", "http://cal-vgp.igorgeyn.com"]

# Streamlit Settings (if using GUI)
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Scraping Settings
SCRAPING_RATE_LIMIT=1.0  # Seconds between requests
SCRAPING_TIMEOUT=30      # Request timeout in seconds
USER_AGENT="Mozilla/5.0 (compatible; CA-Gov-Scraper/1.0)"
MAX_RETRIES=3

# Summary Generation
ENABLE_SUMMARIES=true
MAX_SUMMARY_ATTEMPTS=10
SUMMARY_RATE_LIMIT=2.0

# Data Sources
SCRAPE_CA_SOS=true
SCRAPE_HISTORICAL=true
MAX_HISTORICAL_ITEMS=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# Analysis Settings
ANALYSIS_OUTPUT_DIR=data/
GENERATE_PLOTS=true

# Website Settings
WEBSITE_TITLE="California Ballot Measures"
WEBSITE_API_URL=http://localhost:8000
# For production:
# WEBSITE_API_URL=https://api.cal-vgp.igorgeyn.com

# Backup Settings
BACKUP_DIR=data/backups/
BACKUP_RETENTION_DAYS=30

# Development
DEBUG=false
DEVELOPMENT_MODE=true